<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/widget_layout"
    android:background="@android:color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

  <LinearLayout
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:orientation="vertical"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
    <TextView
        android:textColor="@android:color/secondary_text_light"
        android:id="@+id/stock_symbol_name"
        style="@style/Widget_StockSymbolNameTextStyle"
        android:layout_width="wrap_content"
        android:lines="1"
        android:layout_height="wrap_content"
        tools:text="Alphabet, Inc."
        />
    <TextView
        android:textColor="@android:color/secondary_text_light"
        android:id="@+id/stock_symbol"
        style="@style/Widget_StockSymbolTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="GOOG"
        />
  </LinearLayout>
  <LinearLayout
      android:layout_alignParentRight="true"
      android:layout_alignParentEnd="true"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical">
    <TextView
        android:textColor="@android:color/secondary_text_light"
        android:id="@+id/bid_price"
        android:layout_gravity="end"
        style="@style/Widget_BidPriceTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1000.00"
        />
    <TextView
        android:id="@+id/change_up"
        android:background="@drawable/percent_change_pill_green"
        style="@style/Widget_PercentChangeTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        tools:text="100%"
        />

    <TextView
        android:id="@+id/change_down"
        android:background="@drawable/percent_change_pill_red"
        style="@style/Widget_PercentChangeTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        tools:text="100%"
        />
  </LinearLayout>
</RelativeLayout>